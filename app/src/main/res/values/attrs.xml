<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateLayout">
        <attr name="sl_loading_view" format="reference" />
        <attr name="sl_error_view" format="reference" />
    </declare-styleable>

    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float" />
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <!-- Fonts -->
    <attr name="toolTipDialog.bodyTextStyle" format="reference" />
    <!-- Colors -->
    <attr name="toolTipDialog.backgroundColor" format="color" />
    <attr name="toolTipDialog.buttonTextColor" format="color" />
    <attr name="toolTipDialog.buttonVisibility" format="integer" />


    <declare-styleable name="RatingStarView">
        <attr name="rsv_starMargin" format="integer|dimension" />
        <attr name="rsv_cornerRadius" format="float|dimension" />
        <attr name="rsv_starForegroundColor" format="color|reference" />
        <attr name="rsv_starBackgroundColor" format="color|reference" />
        <attr name="rsv_strokeColor" format="color|reference" />
        <attr name="rsv_strokeWidth" format="float|dimension" />
        <attr name="rsv_starNum" format="integer" />
        <attr name="rsv_rating" format="float" />
        <attr name="rsv_un_rate" format="boolean" />
        <attr name="rsv_starThickness" format="float|fraction" />
        <attr name="rsv_drawStrokeForEmptyStar" format="boolean" />
        <attr name="rsv_drawStrokeForFullStar" format="boolean" />
        <attr name="rsv_drawStrokeForHalfStar" format="boolean" />
        <attr name="rsv_enableSelectRating" format="boolean" />
        <attr name="rsv_onlyHalfStar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PinViewTheme">
        <attr name="pinViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="itemCount" format="integer" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemRadius" format="dimension" />
        <attr name="itemSpacing" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="reference|color" />
        <attr name="viewType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="line" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="android:cursorVisible" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="reference|color" />
        <attr name="android:itemBackground" />
        <attr name="hideLineWhenFilled" format="boolean" />
    </declare-styleable>
</resources>